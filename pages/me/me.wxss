.container {
  display: flex;
  flex-direction: column;
  /* height: 100vh; */
  width: 100vw;
  height: 100vh;
  /* overflow: hidden; */
  background: rgb(238,238,238);
  justify-content: flex-start;
}

.avatar {
  /* height: 30vh; *//* flex: 3; *//* height: 100%; */
  width: 100vw;
  height: 30vh;
  background: #93d3fa;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  color: white;
  font-size:22px;
}

image {
  border: 1px solid white;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  /* margin-bottom: 20rpx; */
}



.nav-list {
  width: 100vw;
  /* margin-top: -20rpx; */
}

.nav-item {
  width: 100%;
  height: 100rpx;
  background: rgb(255,255,255);
  border-bottom: rgb(238,238,238) solid 1px;
  /* margin-top: 20rpx; */
  /* line-height: 120rpx; */
  padding-left: 40rpx;
  /* padding-right: 2rem; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 18px;

  /* font-size: 28rpx; */
  color: rgba(166, 166, 166, 1);
  font-family: Microsoft YaHei;
}

.arrow {
  margin-right: 70rpx;
  transform: rotate(45deg);
  border-top: 2px solid rgba(167, 158, 158, 0.6);
  border-right: 2px solid rgba(167, 158, 158, 0.6);
  width: 28rpx;
  height: 28rpx;
}
