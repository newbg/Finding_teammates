page {
  background-color: #eee;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  width: 85%;
  margin-top: 10%;
  border-radius: 5px;
  border: 1px dashed;
  color: #818181;
}

.detail_state {
  display: flex;
  flex-direction: column;
  margin-top: 45rpx;
  width: 590rpx;
  font-size: 30px;
  /* border: 1px solid; */
}

.btn {
  margin-top: 40rpx;
  width: 570rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.detail_info {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.detail_item {
  width: 570rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.req1 {
  height: 200rpx;
  width: 570rpx;
}

.req2 {
  height: 300rpx;
  width: 570rpx;
  margin-top: 55rpx;
}

.detail_title {
  font-weight: bold;
  font-size: 15px;
}

.teammate_btn {
  height: 60rpx;
  color: #fff;
  background-color: #93d3fa;
  border-radius: 0px;
  border-right: 1px solid #fff;
  font-size: 14px;
  text-align: center;
  line-height: 60rpx;
  vertical-align: middle;
  margin: 0;
}

.teammate_btn::after {
  border: none;
}

.hvteammate_btn {
  color: #93d3fa;
  background-color: #fff;
}

.change_btn {
  height: 60rpx;
  color: #fff;
  border-radius: 0px;
  background-color: #93d3fa;
  line-height: 60rpx;
  font-size: 14px;
  margin: 0;
}

.change_btn::after {
  border: none;
}

.hvchange_btn {
  color: #93d3fa;
  background-color: #fff;
}
